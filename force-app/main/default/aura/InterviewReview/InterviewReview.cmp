<aura:component controller="AssociateMeetingController" implements="flexipage:availableForRecordHome,forceCommunity:availableForAllPageTypes,force:hasRecordId" access="global">
    
    <!-- attributes -->
    <aura:attribute name="data" type="Meeting__c[]"/>
    <aura:attribute name="questionlist" type ="Interview_Question__c[]"/>
    <aura:attribute name="columns" type="List"/>
    <!-- handlers-->
    <aura:handler name="init" value="{! this }" action="{! c.init }"/>
    <lightning:card  title="Mock Interviews">
        
        <!-- the container element determine the height of the datatable -->
        <div style="height: 300px">
            <fieldset class="slds-box slds-theme--default ">
                <lightning:accordion activeSectionName="A">
                    <aura:iteration items="{!v.data}" var="item">
                      <lightning:accordionSection name="{!item.Name}" label="{!item.Display_Name__c}">
                          Feedback: {!item.Feedback__c}<br/>
                            Notes: {!item.Notes__c} <br/>  
                          <p> <lightning:formattedUrl label="Details" value="{!'/s/detail/'+ item.Id}" tooltip="Go to detail page" target="_blank" />
                            </p>
                            Questions
                            
                            
                            
                            
                            
                            <ol>
                                <aura:iteration items="{!item.Interview_Questions__r}" var="item2" indexVar="index">
                                
                                <li>Question {!index + 1}: <br></br>
                                    &nbsp;&nbsp;&nbsp;&nbsp;Subject: {!item2.Question__r.Subject__c}<br/>
                                    &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;{!item2.Question__r.Body__c}  </li>
                                  
                                
                                </aura:iteration>
                                
                            </ol>
                            
                            
                            
                            
                            
                            
                        </lightning:accordionSection>
                    </aura:iteration>
                    
                </lightning:accordion>
            </fieldset>
        </div>
    </lightning:card>
    
</aura:component>