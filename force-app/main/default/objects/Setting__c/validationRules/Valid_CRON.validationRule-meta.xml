<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Valid_CRON</fullName>
    <active>false</active>
    <errorConditionFormula>!REGEX(Expression__c, &quot;((0) ([0-5]*[0-9]) ([0-1]*[0-9]) (\\?) (\\*) ([A-Z]{3}) (\\*))+&quot;)</errorConditionFormula>
    <errorDisplayField>Expression__c</errorDisplayField>
    <errorMessage>Invalid CRON expression submitted</errorMessage>
</ValidationRule>
