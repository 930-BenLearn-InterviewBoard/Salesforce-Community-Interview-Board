<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>sfqz__Unique_nickname</fullName>
    <active>true</active>
    <errorConditionFormula>AND(ISNEW(), LOWER(Name) = LOWER(VLOOKUP($ObjectType.sfqz__Quiz_Player__c.Fields.Name, $ObjectType.sfqz__Quiz_Player__c.Fields.Name, Name)))</errorConditionFormula>
    <errorDisplayField>Name</errorDisplayField>
    <errorMessage>Nickname must be unique</errorMessage>
</ValidationRule>
